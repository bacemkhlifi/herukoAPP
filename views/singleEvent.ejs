<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Font Awesome -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
<!-- Google Fonts -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
<!-- Bootstrap core CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
<!-- Material Design Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
<style>/* change navbar color background*/
  .primary-color, ul.stepper li.active a .circle, ul.stepper li.completed a .circle {
      background-color:#58336d !important;
  }
  
  /* change footer color background*/
  .blue {
      background-color:#58336d !important;
  }
  </style>    
    <title>article</title>
</head>
<body>

    <%- include ('./partials/navbar') -%>
    <div class="container">
        <div class="row mt-3 mb-3 " >
            <% event.forEach((event)=>{%>
            
            <!--Carousel Wrapper-->
            <div class="col col-md-6">
            <div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
               
                <!--Slides-->
                <div class="carousel-inner" role="listbox">
             
                  <!--Third slide-->
                  <div class="carousel-item active">
                    <img src="<%= '/images/'+ event.imageProduct%>" width="300px" height="300px" class="card-img-top">
              
                  </div>
                  <!--/Third slide-->
                </div>
                <!--/.Slides-->
             
              </div>
              <!--/.Carousel Wrapper-->
            </div>
            <div class="col col-md-6">
                   <!--Title-->
                   <h4 class="card-title"><strong><%= event.title%></strong></h4>
                   <h6 class="text-dark"> Vendeur : <%= event.author%></h6>
                   <h4 class="text-dark" >Prix : <%= event.prix%> Dt</h4>
                    <h6 class="text-dark"> Lieu :<%= event.location%></h6>
                    <h6 class="text-dark"> Tél :<%= event.phone%></h6>

                   <h6 class="text-dark"> Publié : <%= event.date.toDateString()%></h6>
                  
                  <hr>
                   <p class="card-text">Description : <%=event.description%></p>
                   
                    <!--<i class="fas fa-thumbs-up"><%=' '+ event.reagi%></i>-->
                    <br>
                   <!--<span class="border border-info"> <%=event.comments%></span>--> 
                    
                   
                </div>
           
               
                 </div> 
           
                 
       <%})%> 
       </div>
    
    <%- include('./partials/footer')-%>
    <!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
</body>
</html>